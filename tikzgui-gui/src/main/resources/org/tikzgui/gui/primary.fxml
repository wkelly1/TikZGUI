<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>

<BorderPane id="BorderPane" prefHeight="650.0" prefWidth="980.0"
            xmlns="http://javafx.com/javafx/8.0.60"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.tikzgui.gui.PrimaryController">


    <left>
        <VBox prefWidth="100" fx:id="leftBar">

            <Label fx:id="header1" text="Layers"/>

        </VBox>
    </left>

    <right>
        <VBox prefWidth="150" fx:id="leftBar">

            <Label fx:id="header1" text="Properties"/>

        </VBox>
    </right>

    <center>
        <ScrollPane fx:id="canvasParent">
            <HBox>
                <Canvas fx:id="canvas"/>
            </HBox>
        </ScrollPane>
    </center>
    <top>
        <HBox prefHeight="30" fx:id="toolbar">

            <Button fx:id="panBtn" text="Pan" onAction="#onPan"/>
            <Button fx:id="squareBtn" text="Square" onAction="#onSquare"/>

        </HBox>
    </top>
</BorderPane>